package Casting;

public class ClassCasting {

	public static void main(String[] args) {
		
		Person p1 = new Person();
		Enemy e1 = new Enemy();
		
		// 1 Hello Citizien
		p1.speak();
		
		// 1 Hand over your wallet
		e1.speak();
		e1.surrender();
		
		// upcasting
		Person p2 = e1;
		p2.speak();
		
		// downcasting
		Person p3 = new Person();
		Enemy e3 = (Enemy) p3;
		e3.speak();
		e3.surrender();

	}

}


class Person {
	
	private static int total = 0;
	
	public Person() { total++; }
	public void speak() { System.out.print(total + " Hello Citizien"); }
	
}

class Enemy extends Person {
	
	private static int total = 0;
	
	public Enemy() { total++; }
	public void speak() { System.out.print(total + " Hand over your wallet"); }
	public void surrender() { System.out.print("I Yield"); }
	
}